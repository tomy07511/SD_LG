<!DOCTYPE html>
<html>
<head>
  <script src="https://cdn.anychart.com/releases/v8/js/anychart-base.min.js"></script>
  <script src="https://cdn.anychart.com/releases/v8/js/anychart-ui.min.js"></script>
  <script src="https://cdn.anychart.com/releases/v8/js/anychart-exports.min.js"></script>
  <link href="https://cdn.anychart.com/releases/v8/css/anychart-ui.min.css" type="text/css" rel="stylesheet">
  <link href="https://cdn.anychart.com/releases/v8/fonts/css/anychart-font.min.css" type="text/css" rel="stylesheet">
  <style type="text/css">

    html,
    body,
    #container {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
    }
  
</style>
</head>
<head>
  
  <title>Hola Mundo</title>
  <style>
   body {
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
    }






.google-style-title {
  color: #4285F4;
  font-size: 24px;
  font-weight: bold;
  text-align: center;
}

.google-style-content {
  text-align: center;
  color: #333;
  font-size: 18px;
}
#exportPDF {
      padding: 10px;
      background-color: #0ba6bb;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    #exportPDF:hover {
      background-color: #098c99;
    }
  </style>
</head>
<body>
<div id="html2pdf">
  <div class="wrapper">
  <div class="content-wrapper" >
    
    
      <div  class="google-style-title">Datos:{{user.name}}</div>
      
      <div class="google-style-content">
      <script>
        var inversor = localStorage.getItem('inversor');
          document.write("Necesita un inversor de al menos :"+inversor+"\n");
      </script>
        
      </div>
      <div class="google-style-content">
      <script>
        var resultadoreal = localStorage.getItem('resultadoreal');
          document.write("El numero de paneles nesecitados es :"+resultadoreal+"\n");
      </script>
        
      </div>
      <div class="google-style-content">
      <script>
        var precio = localStorage.getItem('precio');
          document.write("El precio del sistema es :"+precio+"$"+"\n");
      </script>
         <div id="container"></div>
      </div>
      <div style="padding: 0 50 px;">
      <button style="padding: 10px;" id="exportPDF">PDF</button> </div>
      
      </div>
    </div>
   
  

  <script>
      var R1 = localStorage.getItem('R1');
      var R2 = localStorage.getItem('R2');
      var R3 = localStorage.getItem('R3');
      var R4 = localStorage.getItem('R4');
      var R5 = localStorage.getItem('R5');
      var R6 = localStorage.getItem('R6');

    anychart.onDocumentReady(function () {
      // create column chart
      var chart = anychart.column();

      // turn on chart animation
      chart.animation(true);

      // set chart title text settings
      chart.title('Su consumo los ultimos 6 meses');

      // create area series with passed data
      var series = chart.column([
        ['Mes 1', R1],
        ['Mes 2', R2],
        ['Mes 3', R3],
        ['Mes 4', R4],
        ['Mes 5', R5],
        ['Mes 6', R6],
       
      ]);

      // set series tooltip settings
      series.tooltip().titleFormat('{%X}');

      series
        .tooltip()
        .position('center-top')
        .anchor('center-bottom')
        .offsetX(0)
        .offsetY(5)
        .format('{%Value}{groupsSeparator: }');

      // set scale minimum
      chart.yScale().minimum(0);

      // set yAxis labels formatter
      chart.yAxis().labels().format('{%Value}{groupsSeparator: }');

      // tooltips position and interactivity settings
      chart.tooltip().positionMode('point');
      chart.interactivity().hoverMode('by-x');

      // axes titles
      chart.xAxis().title('MES');
      chart.yAxis().title('WATTS');

      // set container id for the chart
      chart.container('container');

      // initiate chart drawing
      chart.draw();
    });
  
</script>  


  </div>
  </div>
</div>
</body>
<script>
    let htmlPDF = document.getElementById("html2pdf");
    let exportPDF = document.getElementById("exportPDF");
    exportPDF.onclick = (e) => html2pdf(htmlPDF);
 </script>

</html>
